# Environment Variables for Hosting
# Copy this file to .env and set your values

# MongoDB Configuration (Required for production)
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/careerpath?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/careerpath
MONGODB_URI=mongodb://localhost:27017/careerpath
DATABASE_URL=mongodb://localhost:27017/careerpath

# Server Configuration
NODE_ENV=production
PORT=5000

# Hosting Platform Settings
# For Vercel deployment
VERCEL_URL=your-app.vercel.app

# For other hosting platforms
HOST=0.0.0.0